{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "start": {},
    "dev": {
      "dotEnv": [".env.development.local", ".env.development", ".env.local", ".env"],
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
